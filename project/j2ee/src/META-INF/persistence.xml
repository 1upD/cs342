<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="lddbEntities" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>models.ChapterEntity</class>
        <class>models.EngineEntity</class>
        <class>models.GameEntity</class>
        <class>models.PlayerEntity</class>
        <class>models.ReviewEntity</class>
        <class>models.ReviewchapterEntity</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:oracle:thin:@//localhost:1521/XE"/>
            <property name="eclipselink.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
            <property name="eclipselink.jdbc.user"/>
            <property name="eclipselink.jdbc.password"/>
        </properties>
    </persistence-unit>
</persistence>
